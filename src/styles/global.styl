@require './../styles/variables'
@require './../styles/helpers'
@require './../styles/reset'
@require './../styles/layout'

.logo-wrapper
  text-align center
  padding-top 2rem
  margin-top 0
  a
    font-family 'Walter Turncoat'
    font-weight 600
    border none
    margin-top 0
    text-transform uppercase

button
	display inline-block
	padding 0.5em 0.5em
	background-color $fg
	box-shadow 2px 2px 0 1px $black
	color $black
	font-weight 700
	line-height 1

	&.alt
		padding 0
		background transparent
		box-shadow none
		color $fg
		font-weight 500

		+hover()
			background-color transparent

			svg
				polyline, circle, line, path
					stroke $accent

			span
				color $accent

	&.dark
		background-color lighten($accent, 30)
		box-shadow none
		color $bg

		+hover()
			background-color $accent

		&:first-of-type svg
			transform translate(-1px, 2px)

		&:last-of-type svg
			transform translate(1px, 2px)

		svg
			width 75%
			height 75%

			polyline
				stroke $off-black

	+hover()
		background-color $yellow

form
	width 100%

select
	margin-top 1rem
	padding-right 1.5rem
	padding-left 0.5rem
	height 1.65rem
	border none
	border-radius 0
	background-color $fg
	background-image url('data:image/png;base64,')
	background-position right 50%
	background-repeat no-repeat
	box-shadow 2px 2px 0 1px $black
	font-size 0.9em
	font-family $sans
	line-height 1
	appearance none

	+mq('bp-960')
		margin-top 0
		margin-left 0.25rem

canvas
	display block

span.lang
	display none

	&.visible
		display inline-block

p.lang
	display none

	&.visible
		display block

select.lang
	display none

	&.visible
		display inline-block

.icon
	display inline-block
	margin-left 0.5em
	width 1em
	height 1em

	svg
		width 100%
		height 100%

.column
	margin 0 auto
	padding 0 1rem
	max-width 40rem

#long
	h3
		margin-top 1rem
		font-weight bold

	h4
		margin-top 1rem
		font-weight bold

header .wordmark, #about .wordmark
	display block

	path
		fill $fg

header .back
	display flex
	align-items center

	svg
		margin-left 0.5em

header .about, header .toggle
	display flex
	align-items center

header .language button
	display flex
	align-items center

	svg
		margin-left 0.5em

header .logo svg
	.st0
		fill $fg

	.st1
		fill darken($fg, 10)

#modal .name button
	position relative
	width 1.5rem
	height 1.5rem

	.lang.visible
		display none

	&.unclicked .lang.visible
		position absolute
		top 0
		top 50%
		right 0
		display block
		width 4rem
		color $off-black
		text-align left
		font-size 12px
		transform translate(110%, -50%)

	svg
		display block
		width 26px
		height 26px

		circle
			fill lighten($accent, 30)
			stroke darken($accent, 10)

		line
			stroke $off-black

	+hover()
		svg
			circle
				fill $accent

#modal p.description span
	display inline-block
	padding 0 0.25em
	background-color lighten($accent, 30)
	box-shadow 2px 2px 0 0 darken($accent, 10)
	cursor pointer

	&:hover
		background-color $accent

#modal .explore-nav button
	width 100%

#long .yt
	position relative
	overflow hidden
	margin 2rem 0
	padding-bottom 56.25%
	max-width 100%
	height 0

	iframe, object, embed
		position absolute
		top 0
		left 0
		width 100%
		height 100%

object
	display none !important
